generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String      @id @default(cuid())
  name      String
  email     String      @unique
  createdAt DateTime    @default(now())
  password  String?
  education Education[]
  links     Link[]
  projects  Project[]
  skills    Skill[]
}

model Education {
  id          String  @id @default(cuid())
  degree      String
  institution String
  startYear   Int
  endYear     Int?
  profileId   String
  profile     Profile @relation(fields: [profileId], references: [id])
}

model Skill {
  id        String         @id @default(cuid())
  name      String
  profileId String
  projects  ProjectSkill[]
  profile   Profile        @relation(fields: [profileId], references: [id])

  @@unique([name, profileId])
}

model Project {
  id          String         @id @default(cuid())
  title       String
  description String
  profileId   String
  work        String?
  profile     Profile        @relation(fields: [profileId], references: [id])
  links       ProjectLink[]
  skills      ProjectSkill[]
}

model ProjectSkill {
  projectId String
  skillId   String
  project   Project @relation(fields: [projectId], references: [id])
  skill     Skill   @relation(fields: [skillId], references: [id])

  @@id([projectId, skillId])
}

model ProjectLink {
  id        String  @id @default(cuid())
  type      String
  url       String
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
}

model Link {
  id        String  @id @default(cuid())
  type      String
  url       String
  profileId String
  profile   Profile @relation(fields: [profileId], references: [id])
}
